{{#if view.hovered}}
<div class="detailsbar">
  <a {{action enterEdit target="view" href="true"}} class="details-edit"> [edit] </a>
  <a {{action collapse target="view" href="true"}} class="details-collapse"> [collapse] </a>
</div>
{{/if}}
  {{#if view.context.isEnumerable}}
    {{#each element in view.context}}
      {{#view tagName="span" className="details-iter"}}
        {{#if view.parentView.context.isHash}}
          key
        {{else}}
        [{{view._parentView.contentIndex}}]
        {{/if}}
      {{/view}}
      {{view Sysys.DetailsView contextBinding="element"}}
    {{/each}}
  {{else}}
  <i>{{view.context}} ||  {{view.context.val}} || {{view Sysys.EditableField valueBinding="view.context.val"}}</i>
  {{/if}}
