{{#if view.content.hasKey}}
  {{view Ember.TextField valueBinding="view.content.nodeKey" class="key"}}:
{{else}}
  {{view Ember.TextField valueBinding="view.contentIndex" class="key"}}:
{{/if}}

{{#if view.content.isLiteral}}
  {{view Sysys.ContentField rawValueBinding="view.content.json"}}
{{else}}
  {{#if view.content.isHash}}
    {{collection contentBinding="view.content.nodeVal" itemViewClass="Sysys.HumonNodeView" class="node-item-collection-wrapper hash"}}
  {{/if}}
  {{#if view.content.isList}}
    {{collection contentBinding="view.content.nodeVal" itemViewClass="Sysys.HumonNodeView" class="node-item-collection-wrapper list"}}
  {{/if}}
{{/if}}
{{#if view.displayStats}}
  <strong> JSON STRING</strong>: {{view.json_string}} <br>
  <strong> Active Humon Node</strong>: {{controller.activeHumonNode.nodeView.json_string}}
{{/if}}

