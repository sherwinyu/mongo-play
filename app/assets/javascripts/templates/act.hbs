<div class="act well">
  details = {{ details }} </br>
  miniview:: <br>
  {{view Sysys.DetailsView contextBinding="details"}}
  <br>
  <br>

  view.zorger :{{view.zorger}} <Br>
  each iterator over object
  {{#each view.zorger}}
  ...inside each this {{this}} <br>
  {{/each}}

  {{#view contextBinding="details"}}
  {{as_json view.context}}
  {{#with view.context.[0]}}
  this {{as_json this}} </br>
object {{as_json object}} </br>
array {{as_json array}} </br>
    {{/with}}
    {{/view}}
  <a {{action showAct act href=true}}> # </a>  {{ dateFormat start_time format="MMM D h:mm a"}} ({{ dateFromNow start_time}}) <br>
  <span class="caption">id: </span> {{ id }} <br>
  <span class="caption">content:</span> {{view Sysys.EditableField valueBinding="content"}} {{content}} <br>
  <span class="this">
    <span class="caption">this:</span>
    {{view Sysys.EditableField valueBinding="start_time"}}{{this}}  <br>
  </span>
  <span class="description">
    <span class="caption description">description:</span>
    {{view Sysys.EditableField valueBinding="description" }} {{description}} <br>
  </span>
  <span class="date">
    <span class="caption">date_test:</span> {{view Sysys.DatePickerField  valueBinding="start_time" }} 
  </span>
  <span class="start-time">
    <span class="caption">start time: </span>{{ view Sysys.EditableField valueBinding="start_time" }} 
  </span>
  <span class="start-time">
    <span class="caption">start time: </span>{{ dateFormat start_time format="MMM D h:mm a"}} ({{ dateFromNow start_time}}) <br> 
  </span>
  <span class="start-time">
    <span class="caption">start time: </span>{{ dateFormat end_time format="MMM D h:mm a"}} ({{ dateFromNow end_time}}) <br> 
  </span>
  <button type="submit" class="btn btn-primary"> zorger </button>

  {{! view Ember.TextField valueBinding="description"}}
  {{! view Ember.TextField valueBinding="start_time"}}
  {{#if isDirty}}
  <div>
    You have unsaved changes
  </div>
  {{/if}}

</div>
