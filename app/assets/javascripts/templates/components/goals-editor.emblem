= each goal in myJson
  div.goal
    = humon-field json=goal.goal jsonChanged="didCommit" metatype="text" deletePressed="deleteGoal" enterPressed="toggleCompletedAt"
    div.completed-at
      = if goal.completed_at
        ' Done! Completed at
        = display-field inline=true readOnly=true json=goal.completed_at metatype="time"
      = else
        | Incomplete
